{
  "name": "LogiStock Solutions - Full Stack",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/logistock",
  "shutdownAction": "stopCompose",
  
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "vmware.vscode-spring-boot",
        "vscjava.vscode-maven",
        "angular.ng-template",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-json",
        "mongodb.mongodb-vscode",
        "ms-vscode.vscode-eslint",
        "esbenp.prettier-vscode",
        "redhat.java"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "java.home": "/usr/local/sdkman/candidates/java/current",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-17",
            "path": "/usr/local/sdkman/candidates/java/current"
          }
        ]
      }
    }
  },
  
  "containerEnv": {
    "SPRING_DATA_MONGODB_URI": "mongodb://admin:password123@mongodb:27017/logistockdb?authSource=admin",
    "SPRING_DATA_MONGODB_HOST": "mongodb"
  },

  "forwardPorts": [4200, 8080, 27017],
  "portsAttributes": {
    "4200": {
      "label": "Angular Frontend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Spring Boot Backend",
      "onAutoForward": "notify"
    },
    "27017": {
      "label": "MongoDB",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "npm install -g @angular/cli && npm install && cd backend-java && mvn clean install -DskipTests",
  "postStartCommand": "echo 'ðŸš€ Project ready! Run \"npm start\" for frontend and \"cd backend-java && mvn spring-boot:run\" for backend.'",
  "remoteUser": "vscode"
}